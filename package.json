{
  "name": "cricket-server",
  "version": "1.0.0",
  "description": "gRPC authentication server for Cricket mobile app",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && npm run copy-proto",
    "copy-proto": "mkdir -p dist/proto && cp src/proto/*.proto dist/proto/",
    "start": "node dist/server.js",
    "dev": "nodemon --watch src --exec ts-node src/server.ts",
    "clean": "rm -rf dist"
  },
  "keywords": ["grpc", "authentication", "typescript", "nodejs"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@grpc/grpc-js": "^1.14.3",
    "@grpc/proto-loader": "^0.8.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "ioredis": "^5.3.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.6",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
